# VideoDL Frontend Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# API Configuration
# ============================================

# Backend API URL
VITE_API_URL=http://localhost:8787

# Production API URL (uncomment for production builds)
# VITE_API_URL=https://api.yourdomain.com

# Rust API internal URL for SvelteKit BFF proxy (/api/proxy/extract)
# Use internal network URL in Docker, public URL in local/staging if needed
RUST_API_URL=http://127.0.0.1:3068

# ============================================
# Auth & Subscription (Better Auth + Whop)
# ============================================

# Public origin for auth callback URL generation
ORIGIN=http://localhost:5168

# Better Auth secret (minimum 32 chars)
BETTER_AUTH_SECRET=replace-with-random-32-char-secret

# Comma-separated list of trusted origins for Better Auth CORS/origin check
BETTER_AUTH_TRUSTED_ORIGINS=http://localhost:5168

# PostgreSQL URL used by Better Auth/session/subscription queries
DATABASE_URL=postgres://downloadtool:downloadtool@localhost:5432/downloadtool

# Google OAuth credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Whop plan id used to build checkout URL
WHOP_PLAN_ID=your-whop-plan-id

# ============================================
# Analytics Configuration
# ============================================

# Google Analytics 4 Measurement ID
# Get this from your GA4 property settings
PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ============================================
# Ad Network Configuration
# ============================================

# AdsTerra Publisher Key
# Get this from your AdsTerra dashboard
PUBLIC_ADSTERRA_KEY=your-adsterra-key-here

# PropellerAds Publisher ID (optional fallback)
# PUBLIC_PROPELLERADS_ID=your-propellerads-id

# ============================================
# Feature Flags
# ============================================

# Enable/disable interstitial ads
PUBLIC_ENABLE_INTERSTITIAL=true

# Enable/disable banner ads
PUBLIC_ENABLE_BANNERS=true

# ============================================
# Development Settings
# ============================================

# Enable debug logging
PUBLIC_DEBUG=false

# Mock API responses (for development without backend)
PUBLIC_MOCK_API=false
